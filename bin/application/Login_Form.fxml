<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Login_Form">
   <center>
      <AnchorPane prefHeight="600.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" layoutX="166.0" layoutY="37.0" prefHeight="32.0" prefWidth="273.0" text="Thư viện Từ Thiện">
               <font>
                  <Font name="Times New Roman Bold Italic" size="29.0" />
               </font>
            </Label>
            <Label layoutX="32.0" layoutY="142.0" text="Tài khoản :">
               <font>
                  <Font name="Times New Roman" size="24.0" />
               </font>
            </Label>
            <Label layoutX="34.0" layoutY="208.0" text="Mật khẩu :">
               <font>
                  <Font name="Times New Roman" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="txt_username" layoutX="185.0" layoutY="147.0" prefHeight="35.0" prefWidth="266.0" promptText="Nhập tài khoản" />
           <PasswordField fx:id="txt_password" layoutX="185.0" layoutY="201.0" prefHeight="34.0" prefWidth="265.0" promptText="Nhập mật khẩu" />
            <Hyperlink fx:id="hp_forgetPassword" layoutX="307.0" layoutY="265.0" text="Quên mật khẩu :" underline="true">
               <font>
                  <Font size="18.0" />
               </font>
            </Hyperlink>
            <Button fx:id="btn_login" defaultButton="true" layoutX="191.0" layoutY="339.0" mnemonicParsing="false" onAction="#login" prefHeight="50.0" prefWidth="253.0" text="Đăng nhập" />
            <Button fx:id="btn_register" layoutX="191.0" layoutY="410.0" mnemonicParsing="false" onAction="#register" prefHeight="50.0" prefWidth="253.0" text="Đăng ký " />
            <ImageView fitHeight="127.0" fitWidth="190.0" layoutY="6.0" pickOnBounds="true" preserveRatio="true" />
            <Button fx:id="btn_exit" layoutX="517.0" layoutY="542.0" mnemonicParsing="false" onAction="#Exit" prefHeight="35.0" prefWidth="63.0" text="Thoát" />
            
         </children>
      </AnchorPane>
   </center>
</BorderPane>
